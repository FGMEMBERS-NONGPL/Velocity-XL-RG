<?xml version="1.0"?>

<!--
Velocity XL-RG
Gary R. Neely 'Buckaroo', Aug 2011
-->

<PropertyList>

<name>Gear</name>
<background>Aircraft/Velocity-XL-RG/Panels/transparent-bg.rgb</background>
<w>16</w>
<h>8</h>

<instruments>

  <instrument>
    <name>panel hotspots</name>
    <x>8</x>
    <y>4</y>
    <w>16</w>
    <h>8</h>
    <w-base>16</w-base>
    <h-base>8</h-base>

    <actions>

<!-- Gear Switch -->

      <action>
        <name>GearSw</name>
        <button>0</button>
        <x>-7</x>
        <y>-3</y>
        <w>6</w>
        <h>6</h>
        <binding>
          <command>nasal</command>
          <script>controls.gearToggle();</script>
        </binding>
      </action>

    </actions>

  </instrument>

</instruments>

</PropertyList>
