<?xml version="1.0"?>

<!--
Velocity XL-RG
Gary R. Neely 'Buckaroo', Nov 2011
-->


<PropertyList>

<path>shadow.ac</path>


<!-- Special Shaders -->

<animation>
  <type>noshadow</type>
  <object-name>Shadow</object-name>
</animation>
<!-- Kinda ironic, isn't it? -->


<!-- Animations -->

<!--
Negate roll and pitch so shadow remains parallel with ground
-->

<animation>
  <type>rotate</type>
  <object-name>Shadow</object-name>
  <property>orientation/roll-deg</property>
  <center>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>Shadow</object-name>
  <property>orientation/pitch-deg</property>
  <factor>-1.0</factor>
  <center>
    <x-m>3.4</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

<!--
Translate down to ground level
Would like to displace the shadow a bit based on sun angle, but all I really want is a
plane-to-ground reference for landing, so it's not really worth the trouble.
-->

<animation>
  <type>translate</type>
  <object-name>Shadow</object-name>
  <property>position/gear-agl-m</property>
  <factor>1.0</factor>
  <center>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>-1</z>
  </axis>
</animation>

<!--
Increase transparency as distance approaches 100m. Total fadeout at 100m.
Master select will disable animation after 100m.
-->

<animation> 
  <type>blend</type>
  <object-name>Shadow</object-name>
  <property>position/gear-agl-m</property>
  <factor>.01</factor>
  <offset>0</offset>
  <max>1.0</max>
  <min>0.0</min>
</animation>

</PropertyList>

